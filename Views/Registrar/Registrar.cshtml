@using AgendaOnline.Dto
@model UsuarioRegisterDto


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}
<div asp-validation-summary="All" class="text-danger"></div>

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Usuários</h1>
    </div>
    <form asp-action="Registrar" asp-controller="Registrar" method="post">
        <div class="mb-3">
            <label for="email" class="form-label text-light">Email:</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome">
        </div>

        <div class="mb-3">
            <label for="sobrenome" class="form-label text-light">Sobrenome:</label>
            <input type="text" class="form-control" id="sobrenome" asp-for="Sobrenome">
        </div>

        <div class="mb-3">
            <label for="senha" class="form-label text-light">Senha:</label>
            <input type="password" class="form-control" id="senha" asp-for="Senha">
        </div>

        <div class="mb-3">
            <label for="senha" class="form-label text-light">Confirma Senha:</label>
            <input type="password" class="form-control" id="senha" asp-for="ConfirmaSenha">
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>

